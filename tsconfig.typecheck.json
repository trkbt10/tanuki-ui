{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "strict": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "src/**/*.stories.tsx",
    "src/**/*.spec.tsx",
  ]
}
